@model  List<DoAnCNPM.Models.DoAn>
@{
    ViewBag.Title = "Thức ăn Circle K";
    Layout = "~/Views/Shared/_Layout.cshtml"; // dùng layout chung
}

<style>
    .tab-bar {
        text-align: center;
        margin: 20px 0;
    }

        .tab-bar button {
            margin: 5px;
            padding: 10px 20px;
            background: #eee;
            border: 1px solid #ccc;
            cursor: pointer;
        }

    .product-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        padding: 20px;
        justify-items: center;
    }

    .product-card {
        text-align: center;
    }

        .product-card img {
            width: 180px;
            height: auto;
            border-radius: 10px;
        }

    .product-name {
        margin-top: 10px;
        font-weight: bold;
    }

    .explore {
        text-align: center;
        font-size: 20px;
        color: green;
        margin: 30px;
    }
</style>

<!-- Menu danh mục -->
<div class="tab-bar">
    <button>TẤT CẢ THỨC ĂN</button>
    <button>MÌ</button>
    <button>BÁNH MÌ</button>
    <button>BÁNH BAO</button>
    <button>XÔI</button>
    <button>TRÁNG MIỆNG</button>
</div>

<!-- Danh sách món ăn -->
<div class="product-grid">
    @foreach (var item in Model)
    {
        <div class="product-card">
            <img src="@Url.Content(item.HinhAnh)" alt="@item.TenMonAn" />
            <div class="product-name">@item.TenMonAn</div>
        </div>
    }
</div>

<div class="explore">KHÁM PHÁ THÊM</div>

