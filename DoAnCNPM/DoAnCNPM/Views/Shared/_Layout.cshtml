                    <li class="nav-item">
                        @Html.ActionLink("Liên Hệ", "LienHe", "LienHe", null, new { @class = "nav-link text-dark" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Chính Sách Bảo Mật", "ChinhSach", "ChinhSach", null, new { @class = "nav-link text-dark" })
