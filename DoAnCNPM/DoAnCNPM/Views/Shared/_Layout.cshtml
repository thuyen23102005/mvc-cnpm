                        @Html.ActionLink("Đăng Nhập", "Login", "Account", null, new
                        {
                            @class = "nav-link btn mx-1",
                            style = "border: 1px solid #000000; color: #000000; border-radius: 5px;"
                        })
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!-- MENU PHỤ CÓ ICON + ĐƯỜNG KẺ NGĂN -->
    <div class="submenu-bar">
        <a href="#"><i class="fas fa-store-alt"></i> Hệ Thống Circle K</a>
        <a href="#"><i class="fas fa-gift"></i> Ưu Đãi Đặc Biệt</a>
        <div class="has-dropdown">
            <a href="@Url.Action("DoUong", "DoUong")">
                <i class="fa fa-utensils"></i> Thức Ăn & Thức Uống
            </a>
            <div class="dropdown-content">
                <a href="@Url.Action("DoUong", "DoUong")">Thức Uống</a>
            </div>
            <div class="dropdown-content">
                <a href="@Url.Action("DoUong", "DoUong")">Thức Uống</a>
            </div>
        </div>
        <!-- Kết thúc phần sửa -->
        <a href="#"><i class="fas fa-box-open"></i> Sản Phẩm & Dịch Vụ</a>
    </div>

    <!-- PHẦN NỘI DUNG TRANG -->
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <!-- FOOTER -->
    <footer class="full-footer">
        <!-- HÀNG 1: LOGO + MENU PHỤ -->
        <div class="footer-top container d-flex justify-content-between align-items-center flex-wrap">
            <!-- Logo -->
            <div class="footer-logo">
                <img src="~/Content/Image/footer-icon.png" alt="Circle K Logo" width="250" />
            </div>

            <!-- Menu phụ -->
            <div class="submenu-bar">
                <a href="#"> Hệ Thống Circle K</a>
                <a href="#"> Ưu Đãi Đặc Biệt</a>
                <a href="#"> Thức Ăn & Thức Uống</a>
                <a href="#"> Sản Phẩm & Dịch Vụ</a>
            </div>

            <!-- Ô tìm kiếm -->
            <form class="footer-search d-flex" action="/Search/Results" method="get">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" name="query" class="form-control" placeholder="Tìm kiếm..." />
                    <button class="btn btn-outline-dark" type="submit">Tìm Kiếm</button>
                </div>
            </form>
            <div class="footer-nav-links">
                <ul class="d-flex flex-row justify-content-center gap-4">
                    <li>
                        @Html.ActionLink("Giới Thiệu", "GioiThieu", "GioiThieu", null, new { @class = "nav-link text-dark" })
                    </li>
                    <li>
                        @Html.ActionLink("Liên Hệ", "Index", "Home", null, new { @class = "nav-link text-dark" })
                    </li>
                    <li>
                        @Html.ActionLink("Chính Sách Bảo Mật", "ChinhSach", "ChinhSach", null, new { @class = "nav-link text-dark" })
                    </li>
                </ul>
            </div>
        </div>
        <!-- ĐƯỜNG KẺ NGANG -->
        <hr class="footer-divider" />

        <!-- HÀNG 2: THÔNG TIN LIÊN HỆ -->
        <div class="container d-flex justify-content-between flex-wrap footer-info">
            <div class="footer-left">
                <p><strong>Circle K Vietnam Chuỗi cửa hàng tiện lợi</strong> - Mở cửa 24/7</p>
                <p>Copyright © 2016 Circle K Vietnam</p>
                <p>Tel: +84 (28) 3620 9017</p>
                <p>Email: info@circlek.com.vn</p>
            </div>
            <div class="footer-right">
                <p><strong>CÔNG TY TNHH VÒNG TRÒN ĐỎ</strong> - Giấy CNĐKDN : 0306182043</p>
                <p>Ngày cấp : 10/11/2008. Nơi cấp : Sở Kế Hoạch - Đầu Tư Tp. Hồ Chí Minh</p>
                <p>Địa chỉ : 160 Bùi Thị Xuân, Phường Phạm Ngũ Lão, Quận 1, Tp.Hồ Chí Minh, Việt Nam.</p>
            </div>
        </div>
    </footer>
    <!-- SCRIPT -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
