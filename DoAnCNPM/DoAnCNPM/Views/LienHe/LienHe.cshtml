@{
    ViewBag.Title = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5" style="max-width: 700px;">
    <h1 class="text-center mb-4" style="color: #89CFF0;">LIÊN HỆ VỚI CIRCLE K</h1>

    @if (ViewBag.ThongBao != null)
    {
        <div class="alert alert-success text-center">
            @ViewBag.ThongBao
        </div>
    }

    <h5>Thông tin liên hệ:</h5>
    <ul>
        <li><strong>Địa chỉ:</strong> 160 Bùi Thị Xuân, Phường Bến Thành, Quận 1, TP.HCM</li>
        <li><strong>Điện thoại:</strong> 028 3620 9017 hoặc 1900 3110</li>
        <li><strong>Email:</strong> info@circlek.com.vn</li>
    </ul>

    <hr />

    <h5>Gửi thông tin liên hệ:</h5>
    <form method="post">
        <div class="form-group mb-3">
            <label for="hoTen">Họ và tên:</label>
            <input type="text" class="form-control" id="hoTen" name="hoTen" required />
        </div>
        <div class="form-group mb-3">
            <label for="email">Email:</label>
            <input type="email" class="form-control" id="email" name="email" required />
        </div>
        <div class="form-group mb-3">
            <label for="noiDung">Nội dung:</label>
            <textarea class="form-control" id="noiDung" name="noiDung" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Gửi liên hệ</button>
    </form>
</div>
