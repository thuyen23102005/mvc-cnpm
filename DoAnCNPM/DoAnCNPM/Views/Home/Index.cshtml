@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="top-bar" style="display: flex; justify-content: space-between; align-items: center; background-color: #00d4d4; padding: 10px;">
        <img src="~/Content/Image/logo.png" alt="Circle K Logo" style="height: 40px; width: 200px;">
        <div>
            <a href="#">Giới Thiệu</a> |
            <a href="#">Liên Hệ</a> |
            <a href="#">Chính Sách Bảo Mật</a> |
            <button>Đăng Ký</button>
            <button style="background-color: #00d4d4; color: white;">Đăng Nhập</button>
        </div>
    </div>

    <div style="display: flex; justify-content: center; gap: 30px; background-color: #00c0c0; padding: 10px;">
        <a href="#">Hệ Thống Circle K</a>
        <a href="#">Ưu Đãi Đặc Biệt</a>
        <a href="#">Thức Ăn & Thức Uống</a>
        <a href="#">Sản Phẩm & Dịch Vụ</a>
    </div>

    <div style="text-align: center; padding: 20px;">
        <button>HOT DEAL</button>
        <button>TÌM CỬA HÀNG</button>

        <div style="margin: 20px;">
            <img src="~/Content/Image/deal1.png" alt="Deal 1" style="width: 200px; margin: 10px;">
            <img src="~/Content/Image/deal2.png" alt="Deal 2" style="width: 200px; margin: 10px;">
            <img src="~/Content/Image/deal3.png" alt="Deal 3" style="width: 200px; margin: 10px;">
        </div>

        <button style="margin: 10px; padding: 10px 20px; border: 1px solid green; background: white; color: green;">Xem Tất Cả ⭢</button>

        <h2 style="color: green;">LUÔN CÓ SẢN PHẨM MỚI!</h2>
        <div style="display: flex; justify-content: center;">
            <img src="~/Content/Image/july1.png" alt="July 1" style="width: 200px; margin: 10px;">
            <img src="~/Content/Image/july2.png" alt="July 2" style="width: 200px; margin: 10px;">
        </div>
        <button style="margin: 10px; padding: 10px 20px; border: 1px solid green; background: white; color: green;">Xem Tất Cả ⭢</button>
    </div>
</main>